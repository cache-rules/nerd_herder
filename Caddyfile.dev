0.0.0.0:8080 {
    tls self_signed
    gzip

    redir 302 {
        if {path} is /
        / /app/
    }

    rewrite {
        r '~*.hot-update.js'
        to /app/{uri}
    }

    proxy /manifest frontend:3000 {
        transparent
    }

    proxy /favicon frontend:3000 {
        transparent
    }

    proxy /sockjs-node frontend:3000 {
        transparent
        websocket
    }

    proxy /static/js/ frontend:3000 {
        transparent
    }

    proxy /app frontend:3000 {
        transparent
    }

    proxy / nerd_herder:8080 {
        transparent
    }
}
