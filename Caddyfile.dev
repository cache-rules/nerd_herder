0.0.0.0:8080 {
    tls self_signed
    gzip

    proxy /api nerd_herder:8080 {
        transparent
    }

    proxy /admin nerd_herder:8080 {
        transparent
    }

    proxy /pages nerd_herder:8080 {
        transparent
    }

    proxy /static/admin nerd_herder:8080 {
        transparent
    }

    proxy /static/rest_framework nerd_herder:8080 {
        transparent
    }

    proxy / frontend:3000 {
        transparent
        websocket
    }
}
