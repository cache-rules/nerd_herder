0.0.0.0:8080 {
    tls self_signed
    gzip

    redir 302 {
        if {path} is /
        / /app/
    }

    rewrite {
        r '~*.hot-update.json'
        to /app/{uri}
    }

    proxy /sockjs-node frontend:3000 {
        transparent
        websocket
    }

    proxy /static/js frontend:3000 {
        transparent
    }

    proxy /app frontend:3000 {
        transparent
    }

    proxy / nerd_herder:8080 {
        except /app /static/js/bundle
        transparent
    }
}
